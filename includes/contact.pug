section.section-contact#contact
  .row
    h2 Contact
    .form-container#form
      p <strong>I'm currently available for your projects.</strong> please use this form to get in touch with any ideas.
      form(method="post", action="mailer.php")
        input(type="text", name="name", placeholder="name", id="name", required)
        input(type="email", name="email", placeholder="email", id="email", required)
        textarea(name="message", placeholder="your message", data-new-placeholder="your message", rows="5")
        input(type="submit", value="send")
